  <script>
    // einfache Scrollspy + smooth scroll
    document.querySelectorAll('a.navlink').forEach(a=>{
      a.addEventListener('click', e=>{
        e.preventDefault();
        document.querySelectorAll('a.navlink').forEach(x=>x.classList.remove('active'));
        a.classList.add('active');
        const target = document.querySelector(a.getAttribute('href'));
        target.scrollIntoView({behavior:'smooth',block:'start'});
      });
    });

    // Druck-Button
    document.getElementById('printBtn').addEventListener('click', ()=> window.print());

    // optional: aktiviere active state beim scrollen
    const sections = Array.from(document.querySelectorAll('main section'));
    window.addEventListener('scroll', ()=>{
      const top = window.scrollY + 80;
      let current = sections[0].id;
      for(const s of sections){
        if(s.offsetTop <= top) current = s.id;
      }
      document.querySelectorAll('a.navlink').forEach(a=> a.classList.toggle('active', a.getAttribute('href') === '#'+current));
    });
  </script>
